{
  "compilerOptions": {
    "target": "es2016",                               
    "module": "commonjs",   
    "allowJs": true,              
    "esModuleInterop": true,                              
    "forceConsistentCasingInFileNames": true,                               
    "skipLibCheck": true, 
    "outDir": "./dist",    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "resolveJsonModule": true         
}
}